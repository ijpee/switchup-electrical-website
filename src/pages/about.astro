---
import MainLayout from '../layouts/main-layout.astro'
import Logo from '../icons/logo.tsx';
import  Facebook  from '../icons/facebook.tsx';
import  Twitter  from '../icons/twitter.tsx';
import  LinkedIn  from '../icons/linkedin.tsx';
import Instagram  from '../icons/instagram.tsx';

---


<MainLayout title = 'About Us - Switchup Electrical | Licensed Auckland Electricians'>

  <!-- Banner Section -->

  <section class="w-full bg-about h-[50vh] flex justify-center items-end">
    <div class="py-[30px] lg:py-[41px] px-[60px] lg:px-[152px] flex flex-col justify-center items-center bg-white rounded-tl-[37px] rounded-tr-[37px] gap-2.5">
      <h1 class="text-[30px] leading-[40px] lg:text-[50px] lg:leading-[62px] font-heading font-bold capitalize text-text-primary ">About Us</h1>
      <p class="text-base lg:text-lg lg:leading-[33px] tracking-tight font-montserrat text-text-secondary"> <a href="/" class="hover:text-primary-200">Home</a> / About Us </p>
    </div>
  </section>

  <!-- Introduction Section -->

  <section class="w-full px-12 lg:px-0 pt-[100px] lg:pt-[200px] lg:max-w-[1200px] mx-auto flex items-center justify-center">
    <div class="flex flex-col items-center gap-6">
      <Logo client:load />
      <p class="text-center text-lg font-montserrat text-text-secondary max-w-[600px]">Switchup Electrical: Powering Auckland with expertise, safety, and innovation.</p>
    </div>
  </section>

  <!-- What We Do Section -->

  <section class="w-full pt-[100px] lg:pt-[150px] px-12 lg:px-0 mx-auto lg:max-w-[1200px] ">
    <div class="w-full flex flex-col-reverse lg:flex-row justify-between gap-10 items-center">
      <div class="flex flex-col gap-6">
        <h2 class="text-[30px] text-center lg:text-left font-heading font-bold tracking-wide leading-8 md:leading-[62.50px] md:text-[50px] text-text-primary ">Our Expertise</h2>
        <p class="text-base md:text-lg lg:max-w-[85%] text-center lg:text-left tracking-tight font-montserrat text-text-secondary leading-[33px]">With 15+ years of experience in the electrical industry, Switchup Electrical has evolved from traditional residential work to become Auckland's go-to specialists for modern, niche electrical solutions. We pride ourselves on staying ahead of technology trendsâ€”from EV charging infrastructure to smart home automation, pool and spa electrical systems, and luxury installations that demand precision and expertise.</p>
      </div>
      <img src="/about1.png" alt="Switchup Electrical team at work">
    </div>
  </section>

  <!-- The End Result Section -->

   <section class="w-full pt-[100px] lg:pt-[150px] px-12 lg:px-0 mx-auto lg:max-w-[1200px] ">
    <div class="w-full flex flex-col-reverse lg:flex-row-reverse justify-between gap-24 items-center">
      <div class="flex flex-col gap-6">
        <h2 class="text-[30px] text-center lg:text-left font-heading font-bold tracking-wide leading-8 md:leading-[62.50px] md:text-[50px] text-text-primary ">Why Choose Us</h2>
        <p class="text-base md:text-lg lg:max-w-[95%] text-center lg:text-left tracking-tight font-montserrat text-text-secondary leading-[33px]">Every project we undertake reflects our commitment to quality, safety, and innovation. As fully licensed and certified electricians, we ensure every installation meets strict New Zealand electrical standards. Whether it's a complex EV charger setup, intricate pool electrical work, or a full smart home transformation, we bring reliability, clear communication, and expertise that exceeds expectations.</p>
      </div>
      <img src="/about2.png" alt="Quality electrical installation">
    </div>
  </section>

  <!-- What People Think About Us Section -->

  <section class="w-full py-[100px] lg:py-[185px] mt-[173px] px-12 lg:px-0 mx-auto bg-gray-100 ">
    <div class="w-full flex flex-col gap-10 lg:max-w-[1200px] mx-auto" >
		  <h2 class="font-heading font-bold tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] w-full lg:max-w-[60%] pb-9 mx-auto text-text-primary">Ready to Get Started?</h2>
      <div class="flex w-full justify-center items-center">
        <div class="flex flex-col gap-10 w-full max-w-[500px] justify-between py-[70px] px-7 bg-white items-center rounded-[32px] shadow-lg">
          <p class="flex flex-col tracking-tight leading-9 text-center">
            <span class="text-primary-200 text-lg lg:text-[25px] font-heading font-bold">Get in Touch</span>
            <span class="text-text-secondary text-base lg:text-lg font-montserrat"> Auckland Wide Service</span>
					</p>
          <div class="flex gap-6">
             <a href="https://facebook.com" target="_blank" rel="noopener noreferrer">
              <Facebook />
            </a>
            <a href="https://twitter.com" target="_blank" rel="noopener noreferrer">
              <Twitter />
            </a>
            <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer">
              <LinkedIn />
            </a>
            <a href="https://instagram.com" target="_blank" rel="noopener noreferrer">
              <Instagram />
            </a>
          </div>
          <p class="flex flex-col tracking-tight leading-9 text-center">
            <a href="tel:0211396512" class="text-text-primary text-base lg:text-lg font-montserrat font-bold hover:text-primary-200 transition-colors"> 0211396512</a>
            <a href="mailto:admin@switchupelectrical.co.nz" class="text-text-secondary text-base lg:text-lg font-montserrat hover:text-primary-200 transition-colors"> admin@switchupelectrical.co.nz</a>
					</p>
        </div>
      </div>
	  </div>
  </section>

</MainLayout>

