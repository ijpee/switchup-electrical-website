<MainLayout title = 'Switchup Electrical - Auckland Electricians | EV Chargers | Smart Homes'>

	<!-- Banner -->
	
	<section class="w-full bg-hero bg-no-repeat bg-cover h-screen lg:min-h-[110vh] px-12 xl:px-0 flex items-center ">
		<div class="lg:max-w-[1200px] w-full mx-auto flex flex-col">
			<div class="pb-6 md:scale-[2] lg:scale-[2.5] origin-left">
				<Logo />
			</div>
			<p class="text-base md:text-[22px] pb-5 pt-8 md:pt-12 lg:pt-16 font-montserrat text-text-secondary w-full lg:max-w-[50%]">Specialists in modern electrical solutions from EV chargers to smart homes, pools, and luxury installations. Licensed, certified, and committed to excellence.</p>
			<Button text="Get Free Quote" href="/contact" />
		</div>
	</section>

	<!-- Services Section -->

	<section class="lg:max-w-[1200px] flex flex-col gap-8 lg:gap-10 lg:flex-row px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px] justify-between ">
		{
			services.map((service) => {
				return (
					<div class="w-full max-w-[358px] mx-auto flex flex-col justify-center items-center gap-3 md:gap-5">
						<h3 class="text-text-primary font-heading font-bold text-[22px] md:text-[25px] leading-loose">{service.title}</h3>
						<p class="text-base md:text-lg tracking-tight font-montserrat text-text-secondary leading-[33px] text-center"> {service.text}</p>
						<a href="/services" class="text-primary-200 leading-snug text-lg tracking-tight font-montserrat font-semibold gap-2 py-4 md:py-8 startCenter hover:text-primary-100 transition-colors">Learn More <ArrowSec /></a>
					</div>
				)
			})
		}
	</section>

	<!-- About Section -->

	<section class="w-full lg:max-w-[1200px] mx-auto px-12 xl:px-0 flex flex-col-reverse justify-center items-center lg:grid grid-cols-2 gap-[75px] pt-[100px] lg:pt-[200px]">
