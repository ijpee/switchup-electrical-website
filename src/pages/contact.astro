---
import MainLayout from '../layouts/main-layout.astro'
import ContactInfo from '../components/contact-box.tsx'
import ContactForm from '../components/contact-form.tsx'
---


<MainLayout title = 'Contact Us - Switchup Electrical | Get a Free Quote | 0211396512'>

  <!-- Banner Section -->

  <section class="w-full bg-contact h-[50vh] flex justify-center items-end">
    <div class="py-[30px] lg:py-[41px] px-[60px] lg:px-[152px] flex flex-col justify-center items-center bg-white rounded-tl-[37px] rounded-tr-[37px] gap-2.5">
      <h1 class="text-[30px] leading-[40px] lg:text-[50px] lg:leading-[62px] font-heading font-bold capitalize text-text-primary ">Contact Us</h1>
      <p class="text-base lg:text-lg lg:leading-[33px] tracking-tight font-montserrat text-text-secondary"> <a href="/" class="hover:text-primary-200">Home</a> / Contact</p>
    </div>
  </section>

  <!-- Intro Section -->

	<section class="lg:max-w-[1200px] flex flex-col gap-8 lg:gap-10 px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px]">
		<h2 class="text-[30px] text-center font-heading font-bold tracking-wide lg:max-w-[70%] leading-8 md:leading-[62.50px] md:text-[50px] mx-auto text-text-primary ">Ready to power your next project? Get in touch today.</h2>

    <!-- main section -->
    <div class="grid grid-cols-1 gap-[55px] pt-20 lg:grid-cols-3 place-content-center">
      <ContactInfo />
      <ContactForm />
    </div>
	</section>

 

</MainLayout>

<style>

  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
      display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
      -ms-overflow-style: none;  /* IE and Edge */
      scrollbar-width: none;  /* Firefox */
  }

</style>