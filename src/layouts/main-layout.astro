---
import Navbar from '../components/navbar.tsx'
import Footer from '../components/footer.tsx'

export interface LayoutProps {
  title : string 
}

const { title } = Astro.props as LayoutProps
---


<html lang="en">
  <head>
    <meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
    <meta name="description" content="Switchup Electrical - Specialists in modern electrical solutions across Auckland. EV chargers, smart homes, pool electrical, and luxury installations. Call 0211396512" />
    <meta name="keywords" content="electrician Auckland, EV charger installation, pool electrical, smart home, switchboard upgrade, commercial electrical, residential electrician" />
    <meta title = {title}/>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,700;1,800;1,900&display=swap" rel="stylesheet">
    
    <title>{title}</title>
  </head>
  <body>
    <main class='bg-main bg-no-repeat bg-cover bg-center'>
      <Navbar client:load/>
      <slot/>
      <!-- All different pages to be rendered here -->
      <Footer />
    </main>
    <p class="tracking-tight text-base text-center border border-secondary-200 bg-white py-10 lg:text-lg lg:leading-[33px] font-montserrat text-text-secondary">
        Copyright Â© {new Date().getFullYear()} Switchup Electrical. All rights reserved. | Licensed Electrician Auckland
    </p>
  </body>
</html>


